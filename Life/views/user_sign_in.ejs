<main class="flex-grow flex items-center justify-center p-4">
    <div class="flex flex-col md:flex-row bg-white dark:bg-white-800 shadow-md rounded-lg overflow-hidden max-w-4xl w-full">
        <img src="/img/sign.png" alt="Profile Image" class="w-full md:w-1/2 object-cover" crossorigin="anonymous">
        <div class="p-8 w-full md:w-1/2 flex flex-col justify-center">
            <h2 class="text-2xl font-bold mb-2 text-black dark:text-black">Hi there!</h2>
            <p class="mb-4 text-zinc-700 dark:text-zinc-400">Please enter your details to log in.</p>
            <form action="/users/create-session" method="POST">
            <div class="space-y-4">
                <input type="text" name="usernameOrEmailOrPhone" placeholder="Phone number, username..." class="w-full border rounded-lg p-2 dark:bg-white-700 dark:border-zinc-600 dark:text-black" required>
                <input type="password" name="password" placeholder="Password" class="w-full border rounded-lg p-2 dark:bg-white-700 dark:border-zinc-600 dark:text-black" required>
                <button class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg">Log in</button>
            </div>
        </form>
            <p class="mt-4 text-sm text-zinc-700 dark:text-zinc-400">
                Don't have an account? <a href="http://localhost:3000/" class="text-blue-600">Sign up</a>
            </p>
        </div>
    </div>
</main>